<div id="home" class="hide-home-container" ng-show="!isLogged">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title"><strong>Kunzad</strong></h1>
                <div class="account-wall">
                    <form class="form-signin">
                        <input type="text" class="form-control text-uppercase" ng-model="myInformation.LoginName" placeholder="Login Name" required autofocus>
                        <input type="password" class="form-control text-uppercase" ng-model="myInformation.Password" placeholder="Password" required>
                        <button class="btn btn-lg btn-primary btn-block" ng-click="onLoginRequest()">Login</button>
                        <div style="padding-left:10px">
                            <label class="checkbox pull-left" style="padding-left: 10px;">
                                <input type="checkbox" value="remember-me">
                                Remember me
                            </label>
                            <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>