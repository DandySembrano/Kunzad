@{
    Layout = "~/Views/Shared/_TransactionLayout.cshtml";
}


<!-- General -->
@section tab1Content{
    <div context-menu="formContextMenu()" data-target="FormMenu">
        <!--Master-->
        <div class="alert alert-danger alert-sm" ng-show="seaFreightIsError">
            <i class="fa fa-remove pr10" ng-click="seaFreightIsError=false;seaFreightErrorMessage=''"></i>
            <strong>ERROR!</strong>{{" " + seaFreightErrorMessage}}
        </div>
        @*Column 1*@

        <form class="form-horizontal" role="form">
            <div class="col-lg-4">
                <div class="form-group form-group-sm">
                    <label class="col-md-3 control-label small">Date</label>
                    <div class="col-md-4">
                        <input type="text"
                               class="form-control"
                               placeholder=""
                               ng-model="shipmentItem.Id"
                               ng-disabled="false">
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-3 control-label small">Time</label>
                    <div class="col-md-4">
                        <input type="text"
                               class="form-control"
                               placeholder=""
                               ng-model="shipmentItem.Customer.Code"
                               ng-disabled="false">
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-3 control-label small">Type</label>
                    <div class="col-md-8">
                        <input type="text"
                               class="form-control"
                               placeholder=""
                               ng-model="shipmentItem.Customer.Name"
                               ng-disabled="false">
                    </div>
                </div>
       
                <div class="form-group form-group-sm">
                    <label class="col-md-3 control-label small">Remarks</label>
                    <div class="col-md-8">
                        <textarea rows="3" style="height:auto;"
                                  class="form-control"
                                  placeholder=""
                                  ng-model="shipmentItem.DeliveryAddress"
                                  ng-disabled="false"></textarea>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!--End of Master-->
    <!--Detail-->
    <div class="row">
        <div class="col-lg-12">
            <div id="seaFreightShipmentsContainer"></div>
        </div>
    </div>
    <!--End of Detail-->
}
<!-- List -->
@section tab2Content{
    <div style="padding:0 10px">
        <div class="text-right toggle-hide" ng-click="hideSeaFreightToggle()" ng-show="seaFreightToggle">
            <span class="fa fa-minus" title="Hide"></span>
        </div>
        <div id="seaFreightToggle">
            <div id="seaFreightFilterContainter" style="padding-left:10px;"></div>
        </div><br>
        <div id="seaFreightContainer"></div>
    </div>
}
<!--End of List-->
