@{
    Layout = "~/Views/Shared/_TransactionLayout.cshtml";
}

<!-- General -->
@section tab1Content{
    <div context-menu="" data-target="FormMenu">
        <div class="alert alert-danger alert-sm" ng-show="shipmentIsError">
            <i class="fa fa-remove pr10" ng-click="shipmentIsError=false;shipmentErrorMessage=''"></i>
            <strong>ERROR!</strong>{{" " + shipmentErrorMessage}}
        </div>

        @*row1*@
        <div class="row">
            <form class="form-horizontal" role="form">
                @*col1*@
                <div class="col-lg-6">
                    @*Shipment No*@
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Shipment No</label>
                        <div class="col-md-8">
                            <input type="text"
                                   class="form-control"
                                   placeholder="System Generated"
                                   ng-model="shipmentItem.Id"
                                   ng-disabled="true">
                        </div>
                    </div>
                    @*Business Unit*@
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Business Unit</label>
                        <div class="col-md-8">
                            <input id="BusinessUnit"
                                   type="text"
                                   class="form-control"
                                   placeholder=""
                                   ng-model="shipmentItem.BusinessUnit.Name"
                                   ng-disabled="true">
                        </div>
                    </div>
                    @*Service*@
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Service</label>
                        <div class="col-md-8">
                            <select class="form-control"
                                    placeholder=""
                                    ng-click="setServiceType(shipmentItem.ServiceId)"
                                    ng-disabled="viewOnly"
                                    ng-model="shipmentItem.ServiceId"
                                    ng-options="item.Id as item.Name for item in serviceList"></select>
                        </div>
                    </div>
                    @*Shipment Type*@
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Shipment Type</label>
                        <div class="col-md-8">
                            <select class="form-control"
                                    placeholder=""
                                    ng-disabled="viewOnly"
                                    ng-click="setShipmentType(shipmentItem.ShipmentTypeId)"
                                    ng-model="shipmentItem.ShipmentTypeId"
                                    ng-options="item.Id as item.Name for item in shipmentTypeList"></select>
                        </div>
                    </div>
                </div>
                @*col2*@
                <div class="col-lg-6">
                    @*Payment Mode*@
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Payment Mode</label>
                        <div class="col-md-8">
                            <select class="form-control"
                                    placeholder=""
                                    ng-disabled="viewOnly"
                                    ng-model="shipmentItem.PaymentMode"
                                    ng-options="item.Id as item.Name for item in paymentModeList"></select>
                        </div>
                    </div>
                    @*Booking Remarks*@
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Booking Remarks</label>
                        <div class="col-md-8">
                            <textarea rows="6" style="height:auto;"
                                      class="form-control"
                                      placeholder=""
                                      ng-model="shipmentItem.BookingRemarks"
                                      ng-disabled="viewOnly"></textarea>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        @*row2*@
        <div class="row">
            <form class="form-horizontal" role="form">
                <fieldset class="scheduler-border">
                    <legend class="scheduler-border">Shipper/Consignee Information</legend>
                    @*col1*@
                    <div class="col-lg-6">
                        <div class="form-group form-group-sm">
                            <label class="col-md-12 control-label small  text-left"><strong>Shipper Information</strong></label>
                        </div>
                        @*Customer Code*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Code</label>
                            <div class="col-md-8">
                                <div class="input-group date">
                                    <input id="customerCode"
                                           type="text"
                                           class="form-control"
                                           placeholder=""
                                           ng-model="shipmentItem.Customer.Code"
                                           ng-disabled="viewOnly">
                                    <span class="input-group-addon" style="padding:2px 0 2px 10px;" ng-disabled="viewOnly" title="Search Shipper" ng-click="showCustomer()">
                                        <span class=" glyphicon glyphicon-search"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        @*Customer Name*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Name</label>
                            <div class="col-md-8">
                                <input type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="shipmentItem.Customer.Name"
                                       ng-disabled="true">
                            </div>
                        </div>
                        @*Customer Contact No*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Contact No</label>
                            <div class="col-md-8">
                                <input type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="shipmentItem.Customer.CustomerContacts[0].Contact.ContactPhones[0].ContactNumber"
                                       ng-disabled="true">
                            </div>
                        </div>
                        @*Customer Address*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Address</label>
                            <div class="col-md-8">
                                <textarea rows="3" style="height:auto;"
                                          class="form-control"
                                          placeholder=""
                                          ng-model="shipmentItem.CustomerAddress"
                                          ng-disabled="true"></textarea>
                            </div>
                        </div>
                    </div>
                    @*col2*@
                    <div class="col-lg-6">
                        <div class="form-group form-group-sm">
                            <label class="col-md-12 control-label small  text-left"><strong>Consignee Information</strong></label>
                        </div>
                        @*Consginee*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Name</label>
                            <div class="col-md-8">
                                <input id="consigneename"
                                       type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="shipmentItem.DeliverTo"
                                       ng-disabled="viewOnly">
                            </div>
                        </div>
                        @*Consignee Contact No*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Contact No</label>
                            <div class="col-md-8">
                                <input id="consigneecontactno"
                                       type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="shipmentItem.DeliverToContactNo"
                                       ng-disabled="viewOnly">
                            </div>
                        </div>
                        @*Consignee Address*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Address</label>
                            <div class="col-md-8">
                                <textarea id="DeliveryAddress"
                                          rows="5" style="height:auto;"
                                          class="form-control"
                                          placeholder=""
                                          ng-model="shipmentItem.DeliveryAddress"
                                          ng-disabled="true"></textarea>
                            </div>
                            <div class="col-sm-1">
                                <button class="btn btn-sm pull-right" ng-disabled="viewOnly" title="Input address here" ng-click="showDeliveryAddress = true">
                                    <span class="glyphicon glyphicon-edit" style="color:#4a89dc"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>

        @*row3*@
        <div class="row">
            <form class="form-horizontal" role="form">
                <fieldset class="scheduler-border">
                    <legend class="scheduler-border">Cargo Details</legend>
                    @*col1*@
                    <div class="col-lg-6">
                        @*Quantity*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Total Qty</label>
                            <div class="col-md-8">
                                <input id="quantity"
                                       type="text"
                                       class="form-control"
                                       ng-model="shipmentItem.Quantity"
                                       ng-disabled="viewOnly">
                            </div>
                        </div>
                        @*Total CBM*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Total CBM</label>
                            <div class="col-md-8">
                                <input id="cbm"
                                       type="text"
                                       class="form-control"
                                       ng-model="shipmentItem.TotalCBM"
                                       ng-disabled="viewOnly">
                            </div>
                        </div>
                        @*Cargo Description*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Description</label>
                            <div class="col-md-8">
                                <textarea rows="3" style="height:auto;"
                                          class="form-control"
                                          ng-model="shipmentItem.Description"
                                          ng-disabled="viewOnly"></textarea>
                            </div>
                        </div>
                    </div>
                    @*col2*@
                    <div class="col-lg-6">
                        @*Pickup Business Unit*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Operation Site</label>
                            <div class="col-md-8">
                                <div class="input-group date">
                                    <input id="BusinessUnit"
                                           type="text"
                                           class="form-control"
                                           placeholder=""
                                           ng-model="shipmentItem.BusinessUnit1.Name"
                                           ng-disabled="viewOnly">
                                    <span class="input-group-addon" style="padding:2px 0 2px 10px;" ng-disabled="viewOnly" title="Search Operation Site" ng-click="showBusinessUnit()">
                                        <span class=" glyphicon glyphicon-search"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        @*Pick Up Date*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Pickup Date</label>
                            <div class="col-md-4">
                                <div class='input-group date'>
                                    <input type='text'
                                           id='pickupdate'
                                           class="form-control"
                                           ng-model="shipmentItem.PickupDate"
                                           ng-disabled="viewOnly" />
                                    <span class="input-group-addon" ng-disabled="viewOnly" title="Close" style="padding:2px 0 2px 10px;">
                                        <span class=" glyphicon glyphicon-remove-circle"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        @*Pick Up Time*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Pickup Time</label>
                            <div class="col-md-4">
                                <div class='input-group date'>
                                    <input type='text'
                                           id='pickuptime'
                                           class="form-control"
                                           ng-model="shipmentItem.PickupTime"
                                           ng-disabled="viewOnly" />
                                    <span class="input-group-addon" ng-disabled="viewOnly" title="Close" style="padding:2px 0 2px 10px;">
                                        <span class=" glyphicon glyphicon-remove-circle"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        @*Pick Up Address*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Pickup Address</label>
                            <div class="col-md-8">
                                <textarea id="OriginAddress"
                                          rows="5" style="height:auto;"
                                          class="form-control"
                                          placeholder=""
                                          ng-model="shipmentItem.OriginAddress"
                                          ng-disabled="true"></textarea>
                            </div>
                            <div class="col-sm-1">
                                <button class="btn btn-sm pull-right" ng-disabled="viewOnly" title="Input address here" ng-click="showPickupAddress = true">
                                    <span class="glyphicon glyphicon-edit" style="color:#4a89dc"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <script type="text/javascript">
                    $(function () {
                        $('#pickupdate').datetimepicker({
                            format: 'MM-DD-YYYY',
                            sideBySide: false,
                            pickTime: false,
                            //minDate: moment()
                        })
                        $('#pickuptime').datetimepicker({
                            format: 'HH:mm',
                            sideBySide: false,
                            pickDate: false
                        })
                    });
                </script>
            </form>
        </div>
    </div>
}
<!-- List -->
@section tab2Content{
    <div style="padding:0 10px">
        <div class="text-right toggle-hide" ng-click="hideShipmentToggle()" ng-show="shipmentToggle">
            <span class="fa fa-minus" title="Hide"></span>
        </div>
        <div id="shipmentToggle">
            <div id="shipmentFilterContainter" style="padding-left:10px;"></div>
        </div><br>
        <div id="shipmentContainer"></div>
    </div>
}

@*Directive if module has address input*@
<dir-address datadefinition="deliveryAddressDataDefinition" showmodal="showDeliveryAddress" otheractions="otherActionsDeliveryAddress(action)"></dir-address>
<dir-address datadefinition="pickupAddressDataDefinition" showmodal="showPickupAddress" otheractions="otherActionsPickupAddress(action)"></dir-address>

