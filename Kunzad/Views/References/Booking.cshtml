<!-- Customer List Modal -->
<div id="customer-list-modal" class="popup-basic bg-none mfp-with-anim mfp-hide" style="max-width:80%;">
    <div class="panel">
        <!--Modal Header-->
        <div class="panel-heading">
            <span class="panel-title"><i class="glyphicon glyphicon-tasks"></i>Customer List</span>
        </div>
        <!--Modal Body-->
        <div class="panel-body" style="height:400px; max-height:100%">
            <div class="myTableContainter" style="height:300px; max-height: 100%">
                <table class="myTableContent table-bordered">
                    <thead>
                        <tr class="myTableRow-header text-dark small">
                            <th class="myTableCell cell-seqno small">No</th>
                            <th class="myTableCell cell-10 small text-center">Code</th>
                            <th class="myTableCell cell-10 small text-center">Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="myTableRow"
                            ng-repeat="c in customerList"
                            ng-click="closeCustomerList(c)">
                            <td class="myTableCell cell-seqno small">{{$index + 1}}</td>
                            <td class="myTableCell cell-10 small">{{c.Code}}</td>
                            <td class="myTableCell cell-10 small">{{c.Name}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Panel Footer -->
        <div class="panel-footer text-right">
            <button class="btn" type="submit" ng-click="closeCustomerList(c)">Cancel</button>
        </div>
    </div>
</div>
