                        <legend class="scheduler-border">Detail No {{$index+1}}</legend>
                        <div class="col-md-12">
                            <span title="Remove" style="color:#4a89dc;position:absolute;right:0px;">
                                <span class="glyphicon glyphicon-trash" ng-click="removeBooking($index)"></span>
                            </span>
                        </div><br />
                        <!-------form------->
                        @*col1*@
                        <div class="col-lg-6">
                            @*Shipment No*@
                            <div class="form-group form-group-sm">
                                <label class="col-md-3 control-label small">Shipment No</label>
                                <div class="col-md-4">
                                    <div class="input-group date">
                                        <input type="text"
                                               class="form-control"
                                               placeholder=""
                                               ng-model="trkgdlvryList.ShipmentId"
                                               ng-disabled="viewOnly" />
