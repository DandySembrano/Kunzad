                            sideBySide: false,
                            pickTime: false,
                        })
                        $('#dispatchtime').datetimepicker({
                            format: 'HH:mm',
                            sideBySide: false,
                            pickDate: false
                        })
                        $('#truckcalltime').datetimepicker({
                            format: 'HH:mm',
                            sideBySide: false,
                            pickDate: false
                        })
                    });
                </script>
            </div>
        </form>
    </div>
</div>
    @*Detail*@
