@{
    Layout = "~/Views/Shared/_TransactionLayout.cshtml";
}


<!-- General -->
@section tab1Content{
<div context-menu="formContextMenu()" data-target="FormMenu">
    <!--Master-->
    <div class="alert alert-danger alert-sm" ng-show="seaFreightIsError">
        <i class="fa fa-remove pr10" ng-click="seaFreightIsError=false;seaFreightErrorMessage=''"></i>
        <strong>ERROR!</strong>{{" " + seaFreightErrorMessage}}
    </div>
    @*Column 1*@
    <div class="col-lg-6">
        <form class="form-horizontal" role="form">
            @*seafreight No*@
            <div class="form-group form-group-sm">
                <label class="col-md-3 control-label small">Transaction No</label>
                <div class="col-md-4">
                    <input type="text"
                           class="form-control"
                           placeholder="System Generated"
                           ng-model="seafreightItem.seaFreightId"
                           ng-disabled="true">
                </div>
            </div>
            @*Bill of Lading Number*@
            <div class="form-group form-group-sm">
                <label class="col-md-3 control-label small">BL Number</label>
                <div class="col-md-8">
                    <input type="text"
                            class="form-control"
                            placeholder=""
                            ng-model="seafreightItem.BLNumber">
                </div>
            </div>
            @*Bill of Lading Date*@
            <div class="form-group form-group-sm">
                <label class="col-md-3 control-label small">BL Date</label>
                <div class="col-md-4">
                    <div class='input-group date'>
                        <input type='text'
                                id='bldate'
                                class="form-control"
                                ng-model="seafreightItem.BLDate"
                                ng-disabled="viewonly" />
                        <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                            <span class=" glyphicon glyphicon-remove-circle"></span>
                        </span>
                    </div>
                </div>
            </div>
            @*Origin*@
            <div class="form-group form-group-sm">
                <label class="col-md-3 control-label small">Origin</label>
                <div class="col-md-8">
                    <div class='input-group date'>
                        <input type="text"
                               id="origin"
                               class="form-control"
                               placeholder=""
                               ng-model="seafreightItem.BusinessUnit1.Name"
                               ng-disabled="viewOnly">
                        <span class="input-group-addon" style="padding:2px 0 2px 10px;" ng-click="showModal('#business-unit-list-modal','origin')">
                            <span class=" glyphicon glyphicon-search"></span>
                        </span>
                    </div>
                </div>
            </div>
            @*Destination*@
            <div class="form-group form-group-sm">
                <label class="col-md-3 control-label small">Destination</label>
                <div class="col-md-8">
                    <div class='input-group date'>
                        <input type="text"
                               id="destination"
                               class="form-control"
                               placeholder=""
                               ng-model="seafreightItem.BusinessUnit.Name"
                               ng-disabled="viewOnly" />
                        <span class="input-group-addon" style="padding:2px 0 2px 10px;" ng-click="showModal('#business-unit-list-modal','destination')">
                            <span class=" glyphicon glyphicon-search"></span>
                        </span>
                    </div>
                </div>
            </div>

            @*Freight Cost*@
            <div class="form-group form-group-sm">
                <label class="col-md-3 control-label small">Freight Cost</label>
                <div class="col-md-4">
                    <input type="text"
                           class="form-control text-right"
                           id="freightCost"
                           placeholder=""
                           ng-model="seafreightItem.FreightCost">
                </div>
            </div>

            <div class="form-group form-group-sm">
                <label class="col-md-3 control-label">Voyage No</label>
                <div class="col-md-8">
                    <div class='input-group date'>
                        <input type="text"
                               id="voyageNo"
                               class="form-control"
                               placeholder=""
                               ng-model="seafreightItem.VesselVoyage.VoyageNo" />
                        <span class="input-group-addon" style="padding:2px 0 2px 10px;"
                              ng-click="showModal('#shippingline-modal','shippingline')">
                            <span class=" glyphicon glyphicon-search"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-md-3 control-label small">Shipping Line</label>
                <div class="col-md-8">
                    <input type="text"
                           class="form-control"
                           placeholder=""
                           ng-model="seafreightItem.VesselVoyage.ShippingLineName"
                           ng-disabled="true">
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-md-3 control-label small">Vessel Name</label>
                <div class="col-md-8">
                    <input type="text"
                           class="form-control"
                           placeholder=""
                           ng-model="seafreightItem.VesselVoyage.VesselName"
                           ng-disabled="true">
                </div>
            </div>
        </form>
    </div>

    @*Column 2*@
    <div class="col-lg-6">
        <form class="form-horizontal" role="form">
            
            <div class="form-group form-group-sm">
                <label class="col-md-5 control-label small">Estimated Departure Date</label>
                <div class="col-md-4">
                    @*<div class='input-group date'>*@
                        <input type='text'
                               id='voyage_estdeptDate'
                               class="form-control"
                               ng-model="seafreightItem.VesselVoyage.EstimatedDepartureDate"
                               ng-disabled="true" />
                        @*<span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                            <span class=" glyphicon glyphicon-remove-circle"></span>
                        </span>*@
                    @*</div>*@
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-md-5 control-label small">Estimated Departure Time</label>
                <div class="col-md-4">
                    @*<div class='input-group date'>*@
                        <input type='text'
                               id='voyage_estdeptTime'
                               class="form-control"
                               ng-model="seafreightItem.VesselVoyage.EstimatedDepartureTime"
                               ng-disabled="true" />
                        @*<span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                            <span class=" glyphicon glyphicon-remove-circle"></span>
                        </span>*@
                    @*</div>*@
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-md-5 control-label small">Estimated Arrival Date</label>
                <div class="col-md-4">
                    @*<div class='input-group date'>*@
                        <input type='text'
                               id='voyage_estarrDate'
                               class="form-control"
                               ng-model="seafreightItem.VesselVoyage.EstimatedArrivalDate"
                               ng-disabled="true" />
                        @*<span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                            <span class=" glyphicon glyphicon-remove-circle"></span>
                        </span>*@
                    @*</div>*@
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-md-5 control-label small">Estimated Arrival Time</label>
                <div class="col-md-4">
                    @*<div class='input-group date'>*@
                        <input type='text'
                               id='voyage_estarrTime'
                               class="form-control"
                               ng-model="seafreightItem.VesselVoyage.EstimatedArrivalTime"
                               ng-disabled="true" />
                        @*<span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                            <span class=" glyphicon glyphicon-remove-circle"></span>
                        </span>*@
                    @*</div>*@
                </div>
            </div>

            <div class="form-group form-group-sm">
                <label class="col-md-5 control-label small">Departure Date</label>
                <div class="col-md-4">
                    @*<div class='input-group date'>*@
                        <input type='text'
                               id='voyage_deptDate'
                               class="form-control"
                               ng-model="seafreightItem.VesselVoyage.DepartureDate"
                               ng-disabled="true" />
                        @*<span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                            <span class=" glyphicon glyphicon-remove-circle"></span>
                        </span>*@
                    @*</div>*@
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-md-5 control-label small">Departure Time</label>
                <div class="col-md-4">
                    @*<div class='input-group date'>*@
                        <input type='text'
                               id='voyage_deptTime'
                               class="form-control"
                               ng-model="seafreightItem.VesselVoyage.DepartureTime"
                               ng-disabled="true" />
                        @*<span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                            <span class=" glyphicon glyphicon-remove-circle"></span>
                        </span>*@
                    @*</div>*@
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-md-5 control-label small">Arrival Date</label>
                <div class="col-md-4">
                    @*<div class='input-group date'>*@
                        <input type='text'
                               id='voyage_arrDate'
                               class="form-control"
                               ng-model="seafreightItem.VesselVoyage.ArrivalDate"
                               ng-disabled="true" />
                        @*<span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                            <span class=" glyphicon glyphicon-remove-circle"></span>
                        </span>*@
                    @*</div>*@
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-md-5 control-label small">Arrival Time</label>
                <div class="col-md-4">
                    @*<div class='input-group date'>*@
                        <input type='text'
                               id='voyage_arrTime'
                               class="form-control"
                               ng-model="seafreightItem.VesselVoyage.ArrivalTime"
                               ng-disabled="true" />
                        @*<span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                            <span class=" glyphicon glyphicon-remove-circle"></span>
                        </span>*@
                    @*</div>*@
                </div>
            </div>
        </form>
    </div>
    <!--End of Master-->
    <!--Detail-->
    <div class="row">
        <div class="col-lg-12">
            <div id="seaFreightShipmentsContainer"></div>
        </div>
    </div>
    <!--End of Detail-->
</div>
}
<!-- List -->
