@*Detail*@
<fieldset class="scheduler-border">
    <legend class="scheduler-border">Dispatching Details</legend>
    <div id="sList" ng-repeat="sList in shipmentList">
        <fieldset class="scheduler-border">
            <legend class="scheduler-border">Detail No {{$index+1}}</legend>
            <div class="col-md-22">
                    <span title="Remove" style="color:#4a89dc;position:absolute;right:0px;">
                        <span class=" glyphicon glyphicon-remove-circle" ng-click="removeBooking($index)"></span>
                    </span>
                </div>
            <br />
            <!-------form------->
            @*row1*@
            <div class="row">
                <form class="form-horizontal" role="form">
                    @*col1*@
                    <div class="col-lg-6">
                        @*Shipment No*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Shipment No</label>
                            <div class='col-md-8'>
                                <div class='input-group'>
                                    <input type='text'
                                           class="form-control"
                                           ng-model="sList.Id"
                                           ng-disabled="true" />
                                    <span class="input-group-addon" style="padding:2px 0; color: #4a89dc ; cursor: pointer;" title="Search Destination" ng-click="showModal('#shipment-list-modal')">
                                        <span class="glyphicons glyphicons-search"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        @*Customer Code*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Shipper Code</label>
                            <div class="col-md-8">
                                <input type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="sList.Shipment.Customer.Code"
                                       ng-disabled="true">
                            </div>
                        </div>
                        @*Customer Name*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Shipper Name</label>
                            <div class="col-md-8">
                                <input type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="sList.Shipment.Customer.Name"
                                       ng-disabled="true">
                            </div>
                        </div>

                        @*Consginee*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Consignee Name</label>
                            <div class="col-md-8">
                                <input id="consigneename"
                                       type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="sList.DeliverTo"
                                       ng-disabled="true">
                            </div>
                        </div>
                        @*Consignee Contact No*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Consignee Contact No</label>
                            <div class="col-md-8">
                                <input id="consigneecontactno"
                                       type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="sList.Shipment.DeliverToContactNo"
                                       ng-disabled="true">
                            </div>
                        </div>
                        @*Consignee Address*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Consignee Address</label>
                            <div class="col-md-8">
                                <textarea rows="3" style="height:auto;"
                                          class="form-control"
                                          placeholder=""
                                          ng-model="sList.Shipment.Address.Line1"
                                          ng-disabled="true"></textarea>
                            </div>
                        </div>

                    </div>
                    @*col2*@
                    <div class="col-lg-6">
                        @*Cargo Description*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Cargo Description</label>
                            <div class="col-md-8">
                                <textarea rows="3" style="height:auto;"
                                          class="form-control"
                                          placeholder=""
                                          ng-model="sList.Description"
                                          ng-disabled="true"></textarea>
                            </div>
                        </div>
                        @*Quantity*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Quantity</label>
                            <div class="col-md-8">
                                <input id="quantity"
                                       type="text"
                                       class="form-control"
                                       ng-model="sList.Quantity"
                                       ng-disabled="true">
                            </div>
                        </div>
                        @*Total CBM*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Total CBM</label>
                            <div class="col-md-8">
                                <input id="cbm"
                                       type="text"
                                       class="form-control"
                                       ng-model="sList.CBM"
                                       ng-disabled="true">
                            </div>
                        </div>
                        @*Delivery Date*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Delivery Date</label>
                            <div class="col-md-4">
                                <div class='input-group date'>
                                    <input type='text'
                                           id='deliverydate'
                                           class="form-control"
                                           ng-model="sList.DeliveryDate"
                                           ng-disabled="viewOnly" />
                                    <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                        <span class=" glyphicon glyphicon-remove-circle"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        @*Delivery Time*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Delivery Time</label>
                            <div class="col-md-4">
                                <div class='input-group date'>
                                    <input type='text'
                                           id='deliverytime'
                                           class="form-control"
                                           ng-model="sList.DeliveryTime"
                                           ng-disabled="viewOnly" />
                                    <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                        <span class=" glyphicon glyphicon-remove-circle"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        @*Cost Allocation*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Cost Allocation</label>
                            <div class="col-md-8">
                                <input id="costAllocation"
                                       type="text"
                                       class="form-control"
                                       ng-model="sList.CostAllocation"
                                       ng-disabled="viewOnly">
                            </div>
                        </div>
                    </div>
                    <script type="text/javascript">
                        $(function () {
                            // NUMBERS w/ DECIMAL AND COMMA
                            $('#costAllocation').priceFormat({
                                clearPrefix: true,
                                prefix: '',
                                centsSeparator: '.',
                                thousandsSeparator: ',',
                                centsLimit: 2
                            });

                            $('#estimateDepartureDate,#estimateArrivalDate,#departureDate,#arrivalDate,#deliverydate,#airWaybillDate').datetimepicker({
                                format: 'MM-DD-YYYY',
                                sideBySide: false,
                                pickTime: false
                                //minDate: moment()
                            })

                            $('#estimateDepartureTime,#estimateArrivalTime,#departureTime,#arrivalTime,#deliverytime').datetimepicker({
                                format: 'HH:mm',
                                sideBySide: false,
                                pickDate: false
                            })
                        });
                    </script>

                </form>
            </div>

            <!--end sa form-->
        </fieldset>
    </div>

    @*<div class="row text-right">
        <div class="col-md-22">
            <button class="btn btn-sm btn-primary" type="submit" ng-click="addNewBooking()">
                Add Shipment from Booking
            </button>
        </div>
    </div>*@
</fieldset>
}

<!-- Trucking List -->
@section tab2Content{
    <div ng-show="selectedTab === tabPages[1]">
        <div ui-grid="gridOptionsTruckings" ui-grid-exporter class="grid"></div>
    </div>
}

<div id="shipment-list-modal" class="popup-basic bg-none mfp-with-anim mfp-hide" style="max-width:80%;">
    <div class="panel">
        <!--Modal Header-->
        <div class="panel-heading">
            <span class="panel-title"><i class="glyphicon glyphicon-tasks"></i>Shipment List</span>
        </div>
        <!--Modal Body-->
        <div class="panel-body">
            <div class="row">
                <div class="myTableContainter ">
                    <table class="myTableContent table-bordered">
                        <thead>
                            <tr class="myTableRow-header text-dark small">
                                <th class="myTableCell cell-seqno small">No</th>
                                <th class="myTableCell cell-10 small text-center">Shipment ID</th>
                                <th class="myTableCell cell-10 small text-center">BusinessUnit</th>
                                <th class="myTableCell cell-10 small text-center">Service</th>
                                <th class="myTableCell cell-10 small text-center">Shipment Type</th>
                                <th class="myTableCell cell-10 small text-center">Customer Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="myTableRow"
                                ng-repeat="s in ShipmentList"
                                ng-click="closeShipmentList(s.Id)">
                                <td class="myTableCell cell-seqno small">{{$index + 1}}</td>
                                <td class="myTableCell cell-10 small">{{s.Id}}</td>
                                <td class="myTableCell cell-10 small">{{s.BusinessUnit.Name}}</td>
                                <td class="myTableCell cell-10 small">{{(s.Service.Name)}}</td>
                                <td class="myTableCell cell-10 small">{{(s.ShipmentType.Name)}}</td>
                                <td class="myTableCell cell-10 small">{{(s.Customer.Name)}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Panel Footer -->
        <div class="panel-footer text-right">
            <button class="btn" type="submit" ng-click="closeModalTrucking(trucking)">OK</button>
        </div>
    </div>
</div>

