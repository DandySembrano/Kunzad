@{
    Layout = "~/Views/Shared/_TransactionLayout.cshtml";
}

@*Form Context-Menu*@
<div class="dropdown position-fixed" id="FormMenu">
    <ul class="dropdown-menu" role="menu">
        <li>
            <a class="pointer small" role="menuitem" tabindex="1" ng-click="deliveryExceptionOtheractions('FormCreate')">Create</a>
        </li>
        <li>
            <a style="{{enableSave == true ? '' : 'color:#B8B8B8'}}" class="pointer small" role="menuitem" tabindex="3" ng-click="enableSave == true ? submit() : ''">Save</a>
        </li>
        <li>
            <a style="{{shipmentItem.Id != null && actionMode == 'Edit' ? '' : 'color:#B8B8B8'}}" class="pointer small" role="menuitem" tabindex="2" ng-click="deliveryExceptionOtheractions(shipmentItem.Id != null && deliveryExceptionSubmitDefinition.Type == 'Edit' ? 'PostEditAction' : '')">Edit</a>
        </li>
    </ul>
</div>
<!-- General -->
@section tab1Content{
    <div context-menu="formContextMenu()" data-target="FormMenu">
        <!--Master-->
        <div class="alert alert-danger alert-sm" ng-show="deliveryExceptionIsError">
            <i class="fa fa-remove pr10" ng-click="deliveryExceptionIsError=false;deliveryExceptionErrorMessage=''"></i>
            <strong>ERROR!</strong>{{" " + deliveryExceptionErrorMessage}}
        </div>
        @*Column 1*@
        <form class="form-horizontal" role="form">
            <div class="col-lg-6">
                <div class="form-group form-group-sm">
                    <label class="col-md-3 control-label small">Shipment No</label>
                    <div class="col-md-4">
                        <div class="input-group">
                            <input type="text" class="form-control" id="shipmentId"
                                   ng-model="shipmentItem.Id"
                                   ng-disabled="viewOnly" />
                            <span class="input-group-addon" style="padding : 2px;color: #4a89dc ; cursor: pointer;" title="Search Shipment" ng-click="showModal('#shipment-list-modal')">
                                <span class="glyphicons glyphicons-search">
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-3 control-label small">Shipper Code</label>
                    <div class="col-md-4">
                        <input type="text"
                               class="form-control"
                               placeholder=""
                               ng-model="shipmentItem.Customer.Code"
                               ng-disabled="true">
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-3 control-label small">Shipper Name</label>
                    <div class="col-md-8">
                        <input type="text"
                               class="form-control"
                               placeholder=""
                               ng-model="shipmentItem.Customer.Name"
                               ng-disabled="true">
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-3 control-label small">Consignee Name</label>
                    <div class="col-md-8">
                        <input id="consigneename"
                               type="text"
                               class="form-control"
                               placeholder=""
                               ng-model="shipmentItem.DeliverTo"
                               ng-disabled="true">
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-3 control-label small">Consignee Contact No</label>
                    <div class="col-md-8">
                        <input id="consigneecontactno"
                               type="text"
                               class="form-control"
                               placeholder=""
                               ng-model="shipmentItem.DeliverToContactNo"
                               ng-disabled="true">
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-3 control-label small">Consignee Address</label>
                    <div class="col-md-8">
                        <textarea rows="3" style="height:auto;"
                                  class="form-control"
                                  placeholder=""
                                  ng-model="shipmentItem.DeliveryAddress"
                                  ng-disabled="true"></textarea>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group form-group-sm">
                    <label class="col-md-3 control-label small">Cargo Description</label>
                    <div class="col-md-8">
                        <textarea rows="3" style="height:auto;"
                                  class="form-control"
                                  placeholder=""
                                  ng-model="shipmentItem.Description"
                                  ng-disabled="true"></textarea>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-3 control-label small">Quantity</label>
                    <div class="col-md-4">
                        <input id="quantity"
                               type="text"
                               class="form-control text-right"
                               ng-model="shipmentItem.Quantity"
                               ng-disabled="true">
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-3 control-label small">Total CBM</label>
                    <div class="col-md-4">
                        <input id="cbm"
                               type="text"
                               class="form-control text-right"
                               ng-model="shipmentItem.TotalCBM"
                               ng-disabled="true">
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-3 control-label small">Delivery Date</label>
                    <div class="col-md-4">
                        <div class='input-group date'>
                            <input type='text'
                                   id="deliveryDate"
                                   class="form-control deliverydate"
                                   ng-model="shipmentItem.DeliveryDate"
                                   ng-disabled="true" />
                            <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                <span class=" glyphicon glyphicon-remove-circle"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-3 control-label small">Delivery Time</label>
                    <div class="col-md-4">
                        <div class='input-group date'>
                            <input type='text'
                                   id="deliveryTime"
                                   class="form-control deliverytime"
                                   ng-model="shipmentItem.DeliveryTime"
                                   ng-disabled="true" />
                            <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                <span class=" glyphicon glyphicon-remove-circle"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-3 control-label small">Received By</label>
                    <div class="col-md-4">
                        <input type="text"
                               id="receivedByName"
                               class="form-control"
                               ng-model="shipmentItem.ReceivedByName"
                               ng-disabled="true">
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!--End of Master-->
    <!--Detail-->
    <div class="row">
        <div class="col-lg-12">
            <div id="deliveryExceptionDetailContainer"></div>
        </div>
    </div>
    <!--End of Detail-->
}

<!-- List -->
@section tab2Content{
    <div style="padding:0px 10px 0px 10px">
        <div class="text-right toggle-hide" ng-click="hideDeliveryExceptionToggle()" ng-show="deliveryExceptionToggle">
            <span class="fa fa-minus" title="Hide"></span>
        </div>
        <div id="deliveryExceptionToggle">
            <div id="deliveryExceptionFilterContainter" style="padding-left:10px;"></div>
        </div><br>
        <div id="deliveryExceptionContainer"></div>
    </div>
}
<!--End of List-->

<!-- Shipment List Modal -->
<div id="shipment-list-modal" class="popup-basic bg-none mfp-with-anim mfp-hide" style="max-width:80%;">
    <div class="panel">
        <!--Modal Header-->
        <div class="panel-heading">
            <span class="panel-title"><i class="glyphicon glyphicon-tasks"></i>Shipment List</span>
        </div>
        <!--Modal Body-->
        <div class="panel-body">
            <div id="shipmentFilterContainter" style="padding-left:10px;"></div>
            <div id="shipmentContainer"></div>
        </div>
        <!-- Panel Footer -->
        <div class="panel-footer text-right">
            <button class="btn" type="submit" ng-click="closeModal()">Cancel</button>
        </div>
    </div>
</div>
<!--End of Shipment List Modal -->

<!-- DexType List Modal -->
<div id="dexType-list-modal" class="popup-basic bg-none mfp-with-anim mfp-hide" style="max-width:80%;">
    <div class="panel">
        <!--Modal Header-->
        <div class="panel-heading">
            <span class="panel-title"><i class="glyphicon glyphicon-tasks"></i>DEX Type List</span>
        </div>
        <!--Modal Body-->
        <div class="panel-body">
            <div id="dexTypeFilterContainter" style="padding-left:10px;"></div>
            <div id="dexTypeContainer"></div>
        </div>
        <!-- Panel Footer -->
        <div class="panel-footer text-right">
            <button class="btn" type="submit" ng-click="closeModal()">Cancel</button>
        </div>
    </div>
</div>
<!--End of DexType List Modal -->

