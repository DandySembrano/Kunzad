<!-- General -->
@section tab1Content{
    @*Column 1*@
<div class="row" ng-show="selectedTab === tabPages[0]">
    <form class="form-horizontal" role="form">
        <div class="alert alert-danger alert-sm" ng-show="isError">
            <i class="fa fa-remove pr10"></i>
            <strong>ERROR!</strong>{{errorMessage}}
        </div>
        <div class="row">
            <div class="col-lg-7">
                <div class="row">&nbsp;</div>
                <div class="row form-group form-group-sm">
                    <label class="col-sm-3">Document no</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control"
                               ng-model="truckingItem.DocumentNo"
                               ng-disabled="ViewOnly" />
                    </div>

                    <label class="col-sm-1">Date</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control"
                               ng-model="truckingItem.CreatedDateDesc"
                               ng-disabled="true" />
                    </div>
                </div>
