@*Detail*@
<fieldset class="scheduler-border">
    <legend class="scheduler-border">Dispatching Details</legend>
    <div id="trckngDlvry" ng-repeat="trkgdlvryList in trkgDeliveryList">
        <fieldset class="scheduler-border">
            <legend class="scheduler-border">Detail No {{$index+1}}</legend>
            <div class="col-md-12">
                <span title="Remove" style="color:#4a89dc;position:absolute;right:0px;">
                    <span class=" glyphicon glyphicon-remove-circle" ng-click="removeBooking($index)"></span>
                </span>
            </div><br />
            <!-------form------->
            @*row1*@
            <div class="row">
                <form class="form-horizontal" role="form">
                    @*col1*@
                    <div class="col-lg-6">
                        @*Shipment No*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Shipment No</label>
                            <div class="col-md-8">
                                <input type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="trkgdlvryList.Id"
                                       ng-disabled="viewOnly"
                                       ng-click="showModalShipment($index)">
                            </div>
                        </div>
                        @*Customer Code*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Shipper Code</label>
                            <div class="col-md-8">
                                <input type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="trkgdlvryList.Shipment.Customer.Code"
                                       ng-disabled="true"
                                       ng-click="showModal('#customer-list-modal', 'customer')">
                            </div>
                        </div>
                        @*Customer Name*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Shipper Name</label>
                            <div class="col-md-8">
                                <input type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="trkgdlvryList.Shipment.Customer.Name"
                                       ng-disabled="true">
                            </div>
                        </div>

                        @*Consginee*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Consignee Name</label>
                            <div class="col-md-8">
                                <input id="consigneename"
                                       type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="trkgdlvryList.DeliverTo"
                                       ng-disabled="true">
                            </div>
                        </div>
                        @*Consignee Contact No*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Consignee Contact No</label>
                            <div class="col-md-8">
                                <input id="consigneecontactno"
                                       type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="trkgdlvryList.Shipment.DeliverToContactNo"
                                       ng-disabled="true">
                            </div>
                        </div>
                        @*Consignee Address*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Consignee Address</label>
                            <div class="col-md-8">
                                <textarea rows="3" style="height:auto;"
                                          class="form-control"
                                          placeholder=""
                                          ng-model="trkgdlvryList.Shipment.Address.Line1"
                                          ng-disabled="true"></textarea>
                            </div>
                        </div>

                    </div>
                    @*col2*@
                    <div class="col-lg-6">
                        @*Cargo Description*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Cargo Description</label>
                            <div class="col-md-8">
                                <textarea rows="3" style="height:auto;"
                                          class="form-control"
                                          placeholder=""
                                          ng-model="trkgdlvryList.Description"
                                          ng-disabled="true"></textarea>
                            </div>
                        </div>
                        @*Quantity*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Quantity</label>
                            <div class="col-md-8">
                                <input id="quantity"
                                       type="text"
                                       class="form-control"
                                       ng-model="trkgdlvryList.Quantity"
                                       ng-disabled="viewOnly">
                            </div>
                        </div>
                        @*Total CBM*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Total CBM</label>
                            <div class="col-md-8">
                                <input id="cbm"
                                       type="text"
                                       class="form-control"
                                       ng-model="trkgdlvryList.CBM"
                                       ng-disabled="viewOnly">
                            </div>
                        </div>
                        @*Delivery Date*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Delivery Date</label>
                            <div class="col-md-4">
                                <div class='input-group date'>
                                    <input type='text'
                                           id='deliverydate'
                                           class="form-control"
                                           ng-model="trkgdlvryList.DeliveryDate"
                                           ng-disabled="viewOnly" />
                                    <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                        <span class=" glyphicon glyphicon-remove-circle"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        @*Delivery Time*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Delivery Time</label>
                            <div class="col-md-4">
                                <div class='input-group date'>
                                    <input type='text'
                                           id='deliverytime'
                                           class="form-control"
                                           ng-model="trkgdlvryList.DeliveryTime"
                                           ng-disabled="viewOnly" />
                                    <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                        <span class=" glyphicon glyphicon-remove-circle"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        @*Cost Allocation*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Cost Allocation</label>
                            <div class="col-md-8">
                                <input id="cbm"
                                       type="text"
                                       class="form-control"
                                       ng-model="trkgdlvryList.CostAllocation"
                                       ng-disabled="viewOnly">
                            </div>
                        </div>
                    </div>
                    <script type="text/javascript">
                        $(function () {
                            $('#deliverydate').datetimepicker({
                                format: 'MM-DD-YYYY',
                                sideBySide: false,
                                pickTime: false,
                                //minDate: moment()
                            })
                            $('#deliverytime').datetimepicker({
                                format: 'HH:mm',
                                sideBySide: false,
                                pickDate: false
                            })
                        });
                    </script>

                </form>
            </div>

            <!--end sa form-->
        </fieldset>
    </div>

    @*<div class="row text-right">
        <div class="col-md-12">
            <button class="btn btn-sm btn-primary" type="submit" ng-click="addNewBooking()">
                Add Shipment from Booking
            </button>
        </div>
    </div>*@
</fieldset>
}

<!-- Trucking List -->
@section tab2Content{
    <div ng-show="selectedTab === tabPages[1]">
        <div ui-grid="gridOptionsTruckings" ui-grid-exporter class="grid"></div>
    </div>
}

<div id="trucking-list-modal" class="popup-basic bg-none mfp-with-anim mfp-hide" style="max-width:80%;">
    <div class="panel">
        <!--Modal Header-->
        <div class="panel-heading">
            <span class="panel-title"><i class="glyphicon glyphicon-tasks"></i>Trucking List</span>
        </div>
        <!--Modal Body-->
        <div class="panel-body">
            <div class="row">
                <div class="myTableContainter ">
                    <table class="myTableContent table-bordered">
                        <thead>
                            <tr class="myTableRow-header text-dark small">
                                <th class="myTableCell cell-seqno small">No</th>
                                <th class="myTableCell cell-seqno small">Document No</th>
                                <th class="myTableCell cell-10 small text-center">Trucker</th>
                                <th class="myTableCell cell-10 small text-center">Truck</th>
                                <th class="myTableCell cell-10 small text-center">Driver</th>
                                @*<th class="myTableCell cell-10 small text-center">Origin</th>
                                    <th class="myTableCell cell-10 small text-center">Destination</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="myTableRow"
                                ng-repeat="trucking in truckingList"
                                ng-click="closeModalTrucking(trucking)">
                                <td class="myTableCell cell-seqno small">{{$index + 1}}</td>
                                <td class="myTableCell cell-10 small">{{trucking.DocumentNo}}</td>
                                <td class="myTableCell cell-10 small">{{trucking.Trucker.Name}}</td>
                                <td class="myTableCell cell-10 small">{{trucking.Truck.PlateNo}}</td>
                                <td class="myTableCell cell-10 small">{{trucking.Driver.Name}}</td>
                                @*<td class="myTableCell cell-10 small">{{(trucking.WeightCapacity)}}</td>
                                    <td class="myTableCell cell-10 small">{{(trucking.VolumeCapacity)}}</td>*@
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Panel Footer -->
        <div class="panel-footer text-right">
            <button class="btn" type="submit" ng-click="closeModalTrucking(trucking)">OK</button>
        </div>
    </div>
</div>

