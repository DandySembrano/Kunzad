                        <div class="row">
                            <label class="col-sm-3">Origin</label>
                            <div class="col-sm-3">
                                <input type="text" class="form-control"
                                       ng-model="truckingItem.OriginServiceableAreaName"
                                       ng-disabled="true" />
                            </div>
                            <div class="col-sm-1">
                                <button class="btn btn-sm pull-right" title="Search Origin" ng-click="showModal('#businessUnitOrigin-list-modal')">
                                    <span class="glyphicons glyphicons-zoom_in">
                                    </span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row form-group form-group-sm">
                    <div class="col-lg-12">
                        <div class="row">
                            <label class="col-sm-3">Destination</label>
                            <div class="col-sm-3">
                                <input type="text" class="form-control"
                                       ng-model="truckingItem.DestinationServiceableAreaName"
                                       ng-disabled="true" />
                            </div>
                            <div class="col-sm-1">
                                <button class="btn btn-sm pull-right" title="Search Destination" ng-click="showModal('#businessUnitDestination-list-modal')">
                                    <span class="glyphicons glyphicons-zoom_in">
                                    </span>
                                </button>
                            </div>
                        </div>
                    </div>
