@{
    Layout = "~/Views/Shared/_TransactionLayout.cshtml";
}
@*Form Context-Menu*@
<div class="dropdown position-fixed" id="FormMenu" ng-hide="modalShown" style="z-index: 1000">
    <ul class="dropdown-menu" role="menu">
        <li>
            <a class="pointer small" role="menuitem" tabindex="0" ng-click="truckingOtheractions('Find')">Find</a>
        </li>
        <li>
            <a class="pointer small" role="menuitem" tabindex="1" ng-click="truckingOtheractions('FormCreate')">Create</a>
        </li>
        <li>
            <a style="{{enableSave == true ? '' : 'color:#B8B8B8'}}" class="pointer small" role="menuitem" tabindex="3" ng-click="enableSave == true ? submit() : ''">Save</a>
        </li>
        <li>
            <a style="{{truckingItem.Id != null && truckingSubmitDefinition.Type == 'Edit' ? '' : 'color:#B8B8B8'}}" class="pointer small" role="menuitem" tabindex="4" ng-click="truckingOtheractions(truckingItem.Id != null && truckingSubmitDefinition.Type == 'Edit' ? 'PostEditAction' : '')">Edit</a>
        </li>
        <li>
            <a style="{{truckingItem.Id != null && truckingSubmitDefinition.Type != 'Delete' ? '' : 'color:#B8B8B8'}}" class="pointer small" role="menuitem" tabindex="5" ng-click="truckingOtheractions(truckingItem.Id != null && truckingSubmitDefinition.Type != 'Delete' ? 'PostDeleteAction' : '')">Cancel</a>
        </li>
    </ul>
</div>
<!-- General -->
@section tab1Content{
@*Column 1*@
<div context-menu="formContextMenu()" data-target="FormMenu">
    <div class="alert alert-danger alert-sm" ng-show="truckingIsError" ng-click="truckingIsError = false">
        <i class="fa fa-remove pr10"></i>
        <strong>ERROR!</strong>{{" " + truckingErrorMessage}}
    </div>   
    <div class="row">
        <form class="form-horizontal" role="form">
            @*Column 1*@
            <div class="col-lg-6">  
                    <div class="row form-group form-group-sm">
                        <label class="col-md-3 control-label small">Document no</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control"
                                    ng-model="truckingItem.DocumentNo"
                                    ng-disabled="viewOnly" />
                        </div>

                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Dispatch No</label>
                        <div class="col-md-8">
                            <div class="input-group">
                                <input type="text" class="form-control" id="dispatchId"
                                        ng-model="truckingItem.Id"
                                        ng-disabled="viewOnly" />
                                <span class="input-group-addon" style="padding:2px 0; color: #4a89dc ; cursor: pointer;" title="Search Dispatch" ng-click="showModal('#trucking-list-modal')">
                                    <span class="glyphicons glyphicons-search">
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Dispatch Date</label>
                        <div class="col-md-4">
                            <div class='input-group date'>
                                <input type='text'
                                        id='dispatchdate'
                                        class="form-control"
                                        ng-model="truckingItem.DispatchDate"
                                        ng-disabled="true" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Dispatch Time</label>
                        <div class="col-md-4">
                            <div class='input-group date'>
                                <input type='text'
                                        id="dispatchtime"
                                        class="form-control"
                                        ng-model="truckingItem.DispatchTime"
                                        ng-disabled="true" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Truck Plate No</label>
                        <div class="col-md-4">
                            <div class='input-group date'>
                                <input type="hidden"
                                        class="form-control"
                                        placeholder=""
                                        ng-model="truckingItem.TruckId" />
                                <input id="plateNo"
                                        type="text"
                                        class="form-control"
                                        placeholder=""
                                        ng-model="truckingItem.Truck.PlateNo"
                                        ng-disabled="true" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Trucker Name</label>
                        <div class="col-md-8">
                            <input type="hidden"
                                    class="form-control"
                                    placeholder=""
                                    ng-model="truckingItem.TruckerId" />
                            <input type="text"
                                    class="form-control"
                                    placeholder=""
                                    ng-model="truckingItem.Trucker.Name"
                                    ng-disabled="true" />
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Driver Name</label>
                        <div class="col-md-8">
                                <input type="hidden"
                                        class="form-control"
                                        placeholder=""
                                        ng-model="truckingItem.DriverId" />
                                <input id="driverName" type="text"
                                        class="form-control"
                                        placeholder=""
                                        ng-model="truckingItem.DriverName"
                                        ng-disabled="true" />
                        </div>
                    </div>
            </div>
            @*Column 2*@
            <div class="col-lg-6" style="padding-top:44px">
                    <div class="row form-group form-group-sm">
                        <label class="col-md-3 control-label small">Trucker Cost</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control truckerCost"
                                   ng-model="truckingItem.TruckerCost"
                                   ng-disabled="viewOnly" />
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Origin</label>
                        <div class="col-md-8">
                            <div class="input-group">
                                <input type='hidden'
                                       class="form-control"
                                       ng-model="truckingItem.OriginServiceableAreaId"
                                       ng-disabled="true" />
                                <input id="origin" type='text'
                                       class="form-control"
                                       ng-model="truckingItem.ServiceableArea1.Name"
                                       ng-disabled="viewOnly" />
                                <span class="input-group-addon" style="padding:2px 0; color: #4a89dc ; cursor: pointer;" title="Search Origin" ng-click="showModal('#serviceableArea-list-modal','origin')">
                                    <span class="glyphicons glyphicons-search"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Destination</label>
                        <div class="col-md-8">
                            <div class="input-group">
                                <input type='hidden'
                                       class="form-control"
                                       ng-model="truckingItem.DestinationServiceableAreaId"
                                       ng-disabled="true" />
                                <input id="destination" type='text'
                                       class="form-control"
                                       ng-model="truckingItem.ServiceableArea.Name"
                                       ng-disabled="viewOnly" />
                                <span class="input-group-addon" style="padding:2px 0; color: #4a89dc ; cursor: pointer;" title="Search Destination" ng-click="showModal('#serviceableArea-list-modal','destination')">
                                    <span class="glyphicons glyphicons-search"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Truck Call Date</label>
                        <div class="col-md-4">
                            <div class='input-group date'>
                                <input type='text'
                                        id='truckcalldate'
                                        class="form-control"
                                        ng-model="truckingItem.TruckCallDate"
                                        ng-disabled="true" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Truck Call Time</label>
                        <div class="col-md-4">
                            <div class='input-group date'>
                                <input type='text'
                                        id="truckcalltime"
                                        class="form-control"
                                        ng-model="truckingItem.TruckCallTime"
                                        ng-disabled="true" />
                            </div>
                        </div>
                    </div>
                    @*TruckingType*@
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Type</label>
                        <div class="col-md-8">
                            <input type='hidden'
                                   id="truckcalltime"
                                   class="form-control"
                                   ng-model="truckingItem.TruckingTypeId"
                                   ng-disabled="true" />
                            <input type='text'
                                   class="form-control"
                                   ng-model="truckingItem.TruckingType"
                                   ng-disabled="true" />
                        </div>
                    </div>
                <script type="text/javascript">
                    $(function () {
                        // NUMBERS w/ DECIMAL AND COMMA
                        $('.truckerCost').priceFormat({
                            clearPrefix: true,
                            prefix: '',
                            centsSeparator: '.',
                            thousandsSeparator: ',',
                            centsLimit: 2
                        });

                        $('#dispatchdate').datetimepicker({
                            format: 'MM-DD-YYYY',
                            sideBySide: false,
                            pickTime: false,
                        })
                        $('#truckcalldate').datetimepicker({
                            format: 'MM-DD-YYYY',
                            sideBySide: false,
                            pickTime: false,
                        })
                        $('#dispatchtime').datetimepicker({
                            format: 'HH:mm',
                            sideBySide: false,
                            pickDate: false
                        })
                        $('#truckcalltime').datetimepicker({
                            format: 'HH:mm',
                            sideBySide: false,
                            pickDate: false
                        })
                    });
                </script>
            </div>
        </form>
    </div>  
</div>

@*Detail*@
<fieldset class="scheduler-border">
    @*<legend class="scheduler-border">Dispatching Details</legend>*@
    <br/>
    <div id="trckngDlvry" ng-repeat="trkgdlvryList in trkgDeliveryList">
        <fieldset class="scheduler-border">
            <legend class="scheduler-border">Detail No {{$index+1}}</legend>
            <br />
            <!-------form------->
            @*row1*@
            <div class="row">
                <form class="form-horizontal" role="form">
                    @*col1*@
                    <div class="col-lg-6">
                        @*Shipment No*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Shipment No</label>
                            <div class="col-md-8">
                                <input type="text"
                                        class="form-control"
                                        placeholder=""
                                        ng-model="trkgdlvryList.ShipmentId"
                                        ng-disabled="true">
                            </div>
                        </div>
                        @*Customer Code*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Shipper Code</label>
                            <div class="col-md-8">
                                <input type="text"
                                        class="form-control"
                                        placeholder=""
                                        ng-model="trkgdlvryList.Shipment.Customer.Code"
                                        ng-disabled="true">
                            </div>
                        </div>
                        @*Customer Name*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Shipper Name</label>
                            <div class="col-md-8">
                                <input type="text"
                                        class="form-control"
                                        placeholder=""
                                        ng-model="trkgdlvryList.Shipment.Customer.Name"
                                        ng-disabled="true">
                            </div>
                        </div>

                        @*Consginee*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Consignee Name</label>
                            <div class="col-md-8">
                                <input id="consigneename"
                                        type="text"
                                        class="form-control"
                                        placeholder=""
                                        ng-model="trkgdlvryList.DeliverTo"
                                        ng-disabled="true">
                            </div>
                        </div>
                        @*Consignee Contact No*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Consignee Contact No</label>
                            <div class="col-md-8">
                                <input id="consigneecontactno"
                                        type="text"
                                        class="form-control"
                                        placeholder=""
                                        ng-model="trkgdlvryList.Shipment.DeliverToContactNo"
                                        ng-disabled="true">
                            </div>
                        </div>
                        @*Consignee Address*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Consignee Address</label>
                            <div class="col-md-8">
                                <textarea rows="3" style="height:auto;"
                                            class="form-control"
                                            placeholder=""
                                            ng-model="trkgdlvryList.Shipment.DeliveryAddress"
                                            ng-disabled="true"></textarea>
                            </div>
                        </div>

                    </div>
                    @*col2*@
                    <div class="col-lg-6">
                        @*Cargo Description*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Cargo Description</label>
                            <div class="col-md-8">
                                <textarea rows="3" style="height:auto;"
                                            class="form-control"
                                            placeholder=""
                                            ng-model="trkgdlvryList.Description"
                                            ng-disabled="true"></textarea>
                            </div>
                        </div>
                        @*Quantity*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Quantity</label>
                            <div class="col-md-8">
                                <input id="quantity"
                                        type="text"
                                        class="form-control"
                                        ng-model="trkgdlvryList.Quantity"
                                        ng-disabled="true">
                            </div>
                        </div>
                        @*Total CBM*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Total CBM</label>
                            <div class="col-md-8">
                                <input id="cbm"
                                        type="text"
                                        class="form-control"
                                        ng-model="trkgdlvryList.CBM"
                                        ng-disabled="true">
                            </div>
                        </div>
                        @*Delivery Date*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Delivery Date</label>
                            <div class="col-md-4">
                                <div class='input-group date'>
                                    <input type='text'
                                           class="form-control deliverydate"
                                           ng-model="trkgdlvryList.DeliveryDate"
                                           ng-disabled="viewOnly" />
                                    <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                        <span class=" glyphicon glyphicon-remove-circle"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        @*Delivery Time*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Delivery Time</label>
                            <div class="col-md-4">
                                <div class='input-group date'>
                                    <input type='text'
                                           class="form-control deliverytime"
                                           ng-model="trkgdlvryList.DeliveryTime"
                                           ng-disabled="viewOnly" />
                                    <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                        <span class=" glyphicon glyphicon-remove-circle"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        @*Cost Allocation*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Cost Allocation</label>
                            <div class="col-md-8">
                                <input type="text"
                                       class="form-control costAllocation"
                                       ng-model="trkgdlvryList.CostAllocation"
                                       ng-disabled="viewOnly">
                            </div>
                        </div>
                    </div>
                    <script type="text/javascript">
                        $(function () {
                            // NUMBERS w/ DECIMAL AND COMMA
                            $('.costAllocation').priceFormat({
                                clearPrefix: true,
                                prefix: '',
                                centsSeparator: '.',
                                thousandsSeparator: ',',
                                centsLimit: 2
                            });

                            $('.deliverydate').datetimepicker({
                                format: 'MM-DD-YYYY',
                                sideBySide: false,
                                pickTime: false,
                                //minDate: moment()
                            })
                            $('.deliverytime').datetimepicker({
                                format: 'HH:mm',
                                sideBySide: false,
                                pickDate: false
                            })
                        });
                    </script>

                </form>
            </div>

            <!--end sa form-->
        </fieldset>
    </div>
</fieldset>
}
