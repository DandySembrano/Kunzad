@{
    Layout = "~/Views/Shared/_TransactionLayout.cshtml";
}

<!-- General -->
@section tab1Content{
@*Column 1*@
<div context-menu="formContextMenu()" data-target="FormMenu">
    <div class="row" ng-show="selectedTab === tabPages[0]">
        <form class="form-horizontal" role="form">
            <div class="alert alert-danger alert-sm" ng-show="isError">
                <i class="fa fa-remove pr10"></i>
                <strong>ERROR!</strong>{{errorMessage}}
            </div>
            <div class="row">
                <div class="col-lg-7">
                    <div class="row">&nbsp;</div>
                    <div class="row form-group form-group-sm">
                        <label class="col-md-3 control-label small">Document no</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control"
                                   ng-model="truckingItem.DocumentNo"
                                   ng-disabled="ViewOnly" />
                        </div>

                        <label class="col-md-1 control-label small">Date</label>
                        <div class="col-md-3">
                            <input type="text" class="form-control"
                                   id="createdDate"
                                   ng-model="truckingItem.CreatedDate"
                                   ng-disabled="true" />
                        </div>
                    </div>
                    @*<div class="row form-group form-group-sm">
                            <div class="col-lg-12">
                                <div class="row">
                                    <label class="col-sm-3">Trucking Mode</label>
                                    <div class="col-sm-3"><input type="text" /></div>
                                </div>
                            </div>
                        </div>*@
                    <div class="row form-group form-group-sm">
                        <div class="col-md-12">
                            <div class="form-group form-group-sm">
                                <label class="col-md-3 control-label small">Origin</label>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <input type="text" class="form-control"
                                               ng-model="truckingItem.ServiceableArea1.Name"
                                               ng-disabled="true" />
                                        <span class="input-group-addon" style="padding:2px 0; color: #4a89dc ; cursor: pointer;" title="Search Origin" ng-click="showModal('#serviceableArea-list-modal','origin')">
                                            <span class="glyphicons glyphicons-search"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group form-group-sm">
                                <label class="col-md-3 control-label small">Destination</label>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <input type="text" class="form-control"
                                               ng-model="truckingItem.ServiceableArea.Name"
                                               ng-disabled="true" />
                                        <span class="input-group-addon" style="padding:2px 0; color: #4a89dc ; cursor: pointer;" title="Search Destination" ng-click="showModal('#serviceableArea-list-modal','destination')">
                                            <span class="glyphicons glyphicons-search"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group form-group-sm">
                                <label class="col-md-3 control-label small">Trucker Cost</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" id="truckerCost"
                                           ng-model="truckingItem.TruckerCost"
                                           ng-disabled="ViewOnly" />
                                </div>
                            </div>

                            <div class="form-group form-group-sm">
                                <label class="col-md-3 control-label small">Revenue</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" id="internalRevenue"
                                           ng-model="truckingItem.InternalRevenue"
                                           ng-disabled="ViewOnly" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-5">
                    <fieldset class="scheduler-border">
                        <legend class="scheduler-border">Dispatch Information</legend>
                        <div class="form-group form-group-sm">
                            <label class="col-md-4 control-label small">Dispatch No</label>
                            <div class="col-md-8">
                                <div class="input-group">
                                    <input type="text" class="form-control" class="form-control"
                                           ng-model="truckingItem.Id"
                                           ng-disabled="viewOnly" />
                                    <span class="input-group-addon" style="padding:2px 0; color: #4a89dc ; cursor: pointer;" title="Search Dispatch" ng-click="showModal('#trucking-list-modal')">
                                        <span class="glyphicons glyphicons-search">
                                        </span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-md-4 control-label small">Trucker</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control"
                                       ng-model="truckingItem.Trucker.Name"
                                       ng-disabled="true" />
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-md-4 control-label small">Plate No</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control"
                                       ng-model="truckingItem.Truck.PlateNo"
                                       ng-disabled="true" />
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            <label class="col-md-4 control-label small">Driver</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control"
                                       ng-model="truckingItem.DriverName"
                                       ng-disabled="true" />
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </form>
    </div>
</div>
@*Detail*@
<fieldset class="scheduler-border">
    <legend class="scheduler-border">Dispatching Details</legend>
    <div id="trckngDlvry" ng-repeat="trkgdlvryList in trkgDeliveryList">
        <fieldset class="scheduler-border">
            <legend class="scheduler-border">Detail No {{$index+1}}</legend>
            <br />
            <!-------form------->
            @*row1*@
            <div class="row">
                <form class="form-horizontal" role="form">
                    @*col1*@
                    <div class="col-lg-6">
                        @*Shipment No*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Shipment No</label>
                            <div class="col-md-8">
                                <input type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="trkgdlvryList.Id"
                                       ng-disabled="true">
                            </div>
                        </div>
                        @*Customer Code*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Shipper Code</label>
                            <div class="col-md-8">
                                <input type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="trkgdlvryList.Shipment.Customer.Code"
                                       ng-disabled="true">
                            </div>
                        </div>
                        @*Customer Name*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Shipper Name</label>
                            <div class="col-md-8">
                                <input type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="trkgdlvryList.Shipment.Customer.Name"
                                       ng-disabled="true">
                            </div>
                        </div>

                        @*Consginee*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Consignee Name</label>
                            <div class="col-md-8">
                                <input id="consigneename"
                                       type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="trkgdlvryList.DeliverTo"
                                       ng-disabled="true">
                            </div>
                        </div>
                        @*Consignee Contact No*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Consignee Contact No</label>
                            <div class="col-md-8">
                                <input id="consigneecontactno"
                                       type="text"
                                       class="form-control"
                                       placeholder=""
                                       ng-model="trkgdlvryList.Shipment.DeliverToContactNo"
                                       ng-disabled="true">
                            </div>
                        </div>
                        @*Consignee Address*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Consignee Address</label>
                            <div class="col-md-8">
                                <textarea rows="3" style="height:auto;"
                                          class="form-control"
                                          placeholder=""
                                          ng-model="trkgdlvryList.DeliveryAddress"
                                          ng-disabled="true"></textarea>
                            </div>
                        </div>

                    </div>
                    @*col2*@
                    <div class="col-lg-6">
                        @*Cargo Description*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Cargo Description</label>
                            <div class="col-md-8">
                                <textarea rows="3" style="height:auto;"
                                          class="form-control"
                                          placeholder=""
                                          ng-model="trkgdlvryList.Description"
                                          ng-disabled="true"></textarea>
                            </div>
                        </div>
                        @*Quantity*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Quantity</label>
                            <div class="col-md-8">
                                <input id="quantity"
                                       type="text"
                                       class="form-control"
                                       ng-model="trkgdlvryList.Quantity"
                                       ng-disabled="true">
                            </div>
                        </div>
                        @*Total CBM*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Total CBM</label>
                            <div class="col-md-8">
                                <input id="cbm"
                                       type="text"
                                       class="form-control"
                                       ng-model="trkgdlvryList.CBM"
                                       ng-disabled="true">
                            </div>
                        </div>
                        @*Delivery Date*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Delivery Date</label>
                            <div class="col-md-4">
                                <div class='input-group date'>
                                    <input type='text'
                                           id='deliverydate'
                                           class="form-control"
                                           ng-model="trkgdlvryList.DeliveryDate"
                                           ng-disabled="viewOnly" />
                                    <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                        <span class=" glyphicon glyphicon-remove-circle"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        @*Delivery Time*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Delivery Time</label>
                            <div class="col-md-4">
                                <div class='input-group date'>
                                    <input type='text'
                                           id='deliverytime'
                                           class="form-control"
                                           ng-model="trkgdlvryList.DeliveryTime"
                                           ng-disabled="viewOnly" />
                                    <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                        <span class=" glyphicon glyphicon-remove-circle"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        @*Cost Allocation*@
                        <div class="form-group form-group-sm">
                            <label class="col-md-3 control-label small">Cost Allocation</label>
                            <div class="col-md-8">
                                <input id="costAllocation"
                                       type="text"
                                       class="form-control"
                                       ng-model="trkgdlvryList.CostAllocation"
                                       ng-disabled="viewOnly">
                            </div>
                        </div>
                    </div>
                    <script type="text/javascript">
                        $(function () {
                            // NUMBERS w/ DECIMAL AND COMMA
                            $('#internalRevenue,#truckerCost,#costAllocation').priceFormat({
                                clearPrefix: true,
                                prefix: '',
                                centsSeparator: '.',
                                thousandsSeparator: ',',
                                centsLimit: 2
                            });

                            $('#deliverydate').datetimepicker({
                                format: 'MM-DD-YYYY',
                                sideBySide: false,
                                pickTime: false,
                                //minDate: moment()
                            })
                            $('#deliverytime').datetimepicker({
                                format: 'HH:mm',
                                sideBySide: false,
                                pickDate: false
                            })
                        });
                    </script>

                </form>
            </div>

            <!--end sa form-->
        </fieldset>
    </div>
</fieldset>

}
<!-- Trucking List -->
@section tab2Content{
    <div style="padding:0px 10px 0px 10px">
        <div class="text-right toggle-hide" ng-click="hideTruckingToggle()" ng-show="truckingToggle">Hide</div>
        <div id="truckingToggle">
            <div id="truckingFilterContainter" style="padding-left:10px;"></div>
        </div><br>
        <div id="truckingContainer"></div>
    </div>
}

@*Form Context-Menu*@
<div class="dropdown position-fixed" id="FormMenu">
    <ul class="dropdown-menu" role="menu">
        <li>
            <a class="pointer small" role="menuitem" tabindex="0" ng-click="shipmentOtheractions('Find')">Find</a>
        </li>
        <li>
            <a class="pointer small" role="menuitem" tabindex="1" ng-click="shipmentOtheractions('FormCreate')">Create</a>
        </li>
        <li>
            <a style="{{enableSave == true ? '' : 'color:#B8B8B8'}}" class="pointer small" role="menuitem" tabindex="3" ng-click="enableSave == true ? submit() : ''">Save</a>
        </li>
        <li>
            <a style="{{seafreightItem.Id != null && actionMode == 'Edit' ? '' : 'color:#B8B8B8'}}" class="pointer small" role="menuitem" tabindex="2" ng-click="seaFreightOtheractions(seafreightItem.Id != null && seaFreightSubmitDefinition.Type == 'Edit' ? 'PostEditAction' : '')">Edit</a>
        </li>
        <li>
            <a style="{{seafreightItem.Id != null && actionMode != 'Delete' ? '' : 'color:#B8B8B8'}}" class="pointer small" role="menuitem" tabindex="3" ng-click="seaFreightOtheractions(seafreightItem.Id != null && seaFreightSubmitDefinition.Type == 'Delete' ? 'PostEditAction' : '')">Cancel</a>
        </li>
    </ul>
</div>


<div id="trucking-list-modal" class="popup-basic bg-none mfp-with-anim mfp-hide" style="max-width:80%;">
    <div class="panel">
        <!--Modal Header-->
        <div class="panel-heading">
            <span class="panel-title"><i class="glyphicon glyphicon-tasks"></i>Dispatch List</span>
        </div>
        <!--Modal Body-->
        <div class="panel-body">
            <div id="dispatchingFilterContainter" style="padding-left:10px;"></div>
            <div id="dispatchingContainer"></div>
        </div>
        <!-- Panel Footer -->
        <div class="panel-footer text-right">
            <button class="btn" type="submit" ng-click="closeModal()">Cancel</button>
        </div>
    </div>
</div>


<!-- Serviceable Area List Modal -->
<div id="serviceableArea-list-modal" class="popup-basic bg-none mfp-with-anim mfp-hide" style="max-width:80%;">
    <div class="panel">
        <!--Modal Header-->
        <div class="panel-heading">
            <span class="panel-title"><i class="glyphicon glyphicon-tasks"></i>Serviceable Area List</span>
        </div>
        <!--Modal Body-->
        <div class="panel-body">
            <div id="serviceableAreaFilterContainter" style="padding-left:10px;"></div>
            <div id="serviceableAreaContainer"></div>
        </div>
        <!-- Panel Footer -->
        <div class="panel-footer text-right">
            <button class="btn" type="submit" ng-click="closeModal()">Cancel</button>
        </div>
    </div>
</div>