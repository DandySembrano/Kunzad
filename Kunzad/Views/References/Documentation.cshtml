@{
    Layout = "~/Views/Shared/_TransactionLayout.cshtml";
}

<!-- General -->
@section tab1Content{
    @*Column 1*@
    <div class="row" ng-show="selectedTab === tabPages[0]" context-menu="formContextMenu()" data-target="ContextMenu">
    <form class="form-horizontal" role="form">
        <div class="alert alert-danger alert-sm" ng-show="isError">
            <i class="fa fa-remove pr10"></i>
            <strong>ERROR!</strong>{{errorMessage}}
        </div>

        <fieldset class="scheduler-border">
            <legend class="scheduler-border control-label small">Air Freight Info</legend>
            <div class="col-md-12">
                <div class="form-group form-group-sm">
                    <label class="col-md-2 control-label small">Transaction No</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="[SYSTEM GENERATED]"
                               ng-model="airFreightItem.Id"
                               ng-disabled="true" />
                    </div>

                    <label class="col-md-2 control-label small">Airline</label>
                    <div class="col-md-4">
                        <div class='input-group'>
                            <input type='text'
                                   class="form-control"
                                   ng-model="airFreightItem.Airline.Name"
                                   ng-disabled="true" />
                            <span class="input-group-addon" style="padding:2px 0; color: #4a89dc ; cursor: pointer;" title="Search Airline" ng-click="showModal('#airline-list-modal')">
                                <span class="glyphicons glyphicons-search"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-2 control-label small">Waybill No</label>
                    <div class="col-md-4">
                        <input type='text'
                               class="form-control"
                               ng-model="airFreightItem.AirWaybillNumber"
                               ng-disabled="viewOnly" />
                    </div>
                    <label class="col-md-2 control-label small">Waybill Date</label>
                    <div class="col-md-4">
                        <div class='input-group date'>
                            <input type='text'
                                   id='airWaybillDate'
                                   class="form-control"
                                   ng-model="airFreightItem.AirWaybillDate"
                                   ng-disabled="viewOnly" />
                            <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                <span class=" glyphicon glyphicon-remove-circle"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-2 control-label">Origin</label>
                    <div class="col-md-4">
                        <div class='input-group'>
                            <input type='text'
                                   class="form-control"
                                   ng-model="airFreightItem.OriginBusinessUnitName"
                                   ng-disabled="true" />
                            <span class="input-group-addon" style="padding:2px 0; color: #4a89dc ; cursor: pointer;" title="Search Origin" ng-click="showModal('#origin-list-modal')">
                                <span class="glyphicons glyphicons-search"></span>
                            </span>
                        </div>
                    </div>

                    <label class="col-md-2 control-label">Destination</label>
                    <div class="col-md-4">
                        <div class='input-group'>
                            <input type='text'
                                   class="form-control input-group"
                                   ng-model="airFreightItem.DestinationBusinessUnitName"
                                   ng-disabled="true" />
                            <span class="input-group-addon" style="padding:2px 0; color: #4a89dc ; cursor: pointer;" title="Search Destination" ng-click="showModal('#destination-list-modal')">
                                <span class="glyphicons glyphicons-search"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-2 control-label small">Est Departure Date</label>
                    <div class="col-md-2">
                        <div class='input-group date'>
                            <input type='text'
                                   id='estimateDepartureDate'
                                   class="form-control"
                                   ng-model="airFreightItem.EstimatedDepartureDate"
                                   ng-disabled="viewOnly" />
                            <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                <span class=" glyphicon glyphicon-remove-circle"></span>
                            </span>
                        </div>
                    </div>

                    <label class="col-md-4 control-label small">Est Arrival Date</label>
                    <div class="col-md-2">
                        <div class='input-group date'>
                            <input type='text'
                                   id='estimateArrivalDate'
                                   class="form-control"
                                   ng-model="airFreightItem.EstimatedArrivalDate"
                                   ng-disabled="viewOnly" />
                            <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                <span class=" glyphicon glyphicon-remove-circle"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-2 control-label small">Est Departure Time</label>
                    <div class="col-md-2">
                        <div class='input-group date'>
                            <input type='text'
                                   id='estimateDepartureTime'
                                   class="form-control"
                                   ng-model="airFreightItem.EstimatedDepartureTime"
                                   ng-disabled="viewOnly" />
                            <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                <span class=" glyphicon glyphicon-remove-circle"></span>
                            </span>
                        </div>
                    </div>

                    <label class="col-md-4 control-label small">Est Arrival Time</label>
                    <div class="col-md-2">
                        <div class='input-group date'>
                            <input type='text'
                                   id='estimateArrivalTime'
                                   class="form-control"
                                   ng-model="airFreightItem.EstimatedArrivalTime"
                                   ng-disabled="viewOnly" />
                            <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                <span class=" glyphicon glyphicon-remove-circle"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-2 control-label small">Departure Date</label>
                    <div class="col-md-2">
                        <div class='input-group date'>
                            <input type='text'
                                   id='departureDate'
                                   class="form-control"
                                   ng-model="airFreightItem.DepartureDate"
                                   ng-disabled="viewOnly" />
                            <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                <span class=" glyphicon glyphicon-remove-circle"></span>
                            </span>
                        </div>
                    </div>

                    <label class="col-md-4 control-label small">Arrival Date</label>
                    <div class="col-md-2">
                        <div class='input-group date'>
                            <input type='text'
                                   id='arrivalDate'
                                   class="form-control"
                                   ng-model="airFreightItem.ArrivalDate"
                                   ng-disabled="viewOnly" />
                            <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                <span class=" glyphicon glyphicon-remove-circle"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-md-2 control-label small">Departure Time</label>
                    <div class="col-md-2">
                        <div class='input-group date'>
                            <input type='text'
                                   id='departureTime'
                                   class="form-control"
                                   ng-model="airFreightItem.DepartureTime"
                                   ng-disabled="viewOnly" />
                            <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                <span class=" glyphicon glyphicon-remove-circle"></span>
                            </span>
                        </div>
                    </div>

                    <label class="col-md-4 control-label small">Arrival Time</label>
                    <div class="col-md-2">
                        <div class='input-group date'>
                            <input type='text'
                                   id='arrivalTime'
                                   class="form-control"
                                   ng-model="airFreightItem.ArrivalTime"
                                   ng-disabled="viewOnly" />
                            <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                <span class=" glyphicon glyphicon-remove-circle"></span>
                            </span>
                        </div>
                    </div>
                </div>

            </div>
        </fieldset>
    </form>
</div>

    @*Detail*@
    <div class="row">
        <fieldset class="scheduler-border">
            <legend class="scheduler-border">Details</legend>
            <div id="sList" ng-repeat="sList in AirFreightShipments">
                <div class="row">
                    <fieldset class="scheduler-border">
                        <legend class="scheduler-border">Detail No {{$index+1}}</legend>
                        <div class="col-md-12">
                            <span title="Remove" style="color:#4a89dc;position:absolute;right:0;">
                                <span class=" glyphicon glyphicon-remove-circle" ng-click="removeBooking($index)"></span>
                            </span>
                        </div>
                        <br />
                        <!-------form------->
                        @*row1*@
                        <div class="row">
                            <form class="form-horizontal" role="form">
                                @*col1*@
                                <div class="col-lg-6">
                                    @*Shipment No*@
                                    <div class="form-group form-group-sm">
                                        <label class="col-md-3 control-label small">Shipment No</label>
                                        <div class='col-md-8'>
                                            <div class='input-group'>
                                                <input type='text'
                                                       class="form-control"
                                                       ng-model="sList.Shipment.Id"
                                                       ng-disabled="true" />
                                                <span class="input-group-addon" style="padding:2px 0; color: #4a89dc ; cursor: pointer;" title="Search Shipment" ng-click="showShipment()">
                                                    <span class="glyphicons glyphicons-search"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    @*Customer Code*@
                                    <div class="form-group form-group-sm">
                                        <label class="col-md-3 control-label small">Shipper Code</label>
                                        <div class="col-md-8">
                                            <input type="text"
                                                   class="form-control"
                                                   placeholder=""
                                                   ng-model="sList.Shipment.Customer.Code"
                                                   ng-disabled="true">
                                        </div>
                                    </div>
                                    @*Customer Name*@
                                    <div class="form-group form-group-sm">
                                        <label class="col-md-3 control-label small">Shipper Name</label>
                                        <div class="col-md-8">
                                            <input type="text"
                                                   class="form-control"
                                                   placeholder=""
                                                   ng-model="sList.Shipment.Customer.Name"
                                                   ng-disabled="true">
                                        </div>
                                    </div>

                                    @*Consginee*@
                                    <div class="form-group form-group-sm">
                                        <label class="col-md-3 control-label small">Consignee Name</label>
                                        <div class="col-md-8">
                                            <input id="consigneename"
                                                   type="text"
                                                   class="form-control"
                                                   placeholder=""
                                                   ng-model="sList.Shipment.DeliverTo"
                                                   ng-disabled="true">
                                        </div>
                                    </div>
                                    @*Consignee Contact No*@
                                    <div class="form-group form-group-sm">
                                        <label class="col-md-3 control-label small">Consignee Contact No</label>
                                        <div class="col-md-8">
                                            <input id="consigneecontactno"
                                                   type="text"
                                                   class="form-control"
                                                   placeholder=""
                                                   ng-model="sList.Shipment.DeliverToContactNo"
                                                   ng-disabled="true">
                                        </div>
                                    </div>
                                    @*Consignee Address*@
                                    <div class="form-group form-group-sm">
                                        <label class="col-md-3 control-label small">Consignee Address</label>
                                        <div class="col-md-8">
                                            <textarea rows="3" style="height:auto;"
                                                      class="form-control"
                                                      placeholder=""
                                                      ng-model="sList.Shipment.DeliveryAddress"
                                                      ng-disabled="true"></textarea>
                                        </div>
                                    </div>

                                </div>
                                @*col2*@
                                <div class="col-lg-6">
                                    @*Cargo Description*@
                                    <div class="form-group form-group-sm">
                                        <label class="col-md-3 control-label small">Cargo Description</label>
                                        <div class="col-md-8">
                                            <textarea rows="3" style="height:auto;"
                                                      class="form-control"
                                                      placeholder=""
                                                      ng-model="sList.Shipment.Description"
                                                      ng-disabled="true"></textarea>
                                        </div>
                                    </div>
                                    @*Quantity*@
                                    <div class="form-group form-group-sm">
                                        <label class="col-md-3 control-label small">Quantity</label>
                                        <div class="col-md-8">
                                            <input id="quantity"
                                                   type="text"
                                                   class="form-control"
                                                   ng-model="sList.Shipment.Quantity"
                                                   ng-disabled="true">
                                        </div>
                                    </div>
                                    @*Total CBM*@
                                    <div class="form-group form-group-sm">
                                        <label class="col-md-3 control-label small">Total CBM</label>
                                        <div class="col-md-8">
                                            <input id="cbm"
                                                   type="text"
                                                   class="form-control"
                                                   ng-model="sList.Shipment.TotalCBM"
                                                   ng-disabled="true">
                                        </div>
                                    </div>
                                    @*Delivery Date*@
                                    <div class="form-group form-group-sm">
                                        <label class="col-md-3 control-label small">Delivery Date</label>
                                        <div class="col-md-4">
                                            <div class='input-group date'>
                                                <input type='text'
                                                       id='deliverydate'
                                                       class="form-control"
                                                       ng-model="sList.Shipment.DeliveryDate"
                                                       ng-disabled="true" />
                                                @*<span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                                    <span class=" glyphicon glyphicon-remove-circle"></span>
                                                    </span>*@
                                            </div>
                                        </div>
                                    </div>
                                    @*Delivery Time*@
                                    <div class="form-group form-group-sm">
                                        <label class="col-md-3 control-label small">Delivery Time</label>
                                        <div class="col-md-4">
                                            <div class='input-group date'>
                                                <input type='text'
                                                       id='deliverytime'
                                                       class="form-control"
                                                       ng-model="sList.Shipment.DeliveryTime"
                                                       ng-disabled="true" />
                                                @*<span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                                    <span class=" glyphicon glyphicon-remove-circle"></span>
                                                    </span>*@
                                            </div>
                                        </div>
                                    </div>
                                    @*Cost Allocation*@
                                    <div class="form-group form-group-sm">
                                        <label class="col-md-3 control-label small">Cost Allocation</label>
                                        <div class="col-md-3">
                                            <input id="costAllocation"
                                                   type="text"
                                                   class="form-control"
                                                   ng-model="sList.CostAllocation"
                                                   ng-disabled="viewOnly">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <!--end sa form-->
                    </fieldset>
                </div>
            </div>

            <div class="row text-right">
                <div class="col-md-22">
                    <button class="btn btn-sm btn-primary" type="submit" ng-click="airFreightShipmentsResetData()">
                        Add Shipment from Booking
                    </button>
                </div>
            </div>
        </fieldset>
    </div>
}

<!-- AirFreight List -->
@section tab2Content{
    <div style="padding:0 10px">
        <div class="text-right toggle-hide" ng-click="hideAirFreightToggle()" ng-show="airFreightToggle">Hide</div>
