@{
    Layout = "~/Views/Shared/_TransactionLayout.cshtml";
}


<!-- General -->
@section tab1Content{
    <div context-menu="formContextMenu()" data-target="FormMenu">
        <div class="alert alert-danger alert-sm" ng-show="seaFreightIsError">
            <i class="fa fa-remove pr10" ng-click="seaFreightIsError=false;seaFreightErrorMessage=''"></i>
            <strong>ERROR!</strong>{{" " + seaFreightErrorMessage}}
        </div>
        <div class="row">
            <form class="form-horizontal" role="form">
                <div class="col-lg-6">
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Shipment No</label>
                        <div class="col-md-4">
                            <input type="text"
                                   class="form-control"
                                   placeholder=""
                                   ng-model="shipmentItem.Id"
                                   ng-disabled="true">
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Shipper Code</label>
                        <div class="col-md-4">
                            <input type="text"
                                   class="form-control"
                                   placeholder=""
                                   ng-model="shipmentItem.Customer.Code"
                                   ng-disabled="true">
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Shipper Name</label>
                        <div class="col-md-8">
                            <input type="text"
                                   class="form-control"
                                   placeholder=""
                                   ng-model="shipmentItem.Customer.Name"
                                   ng-disabled="true">
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Consignee Name</label>
                        <div class="col-md-8">
                            <input id="consigneename"
                                    type="text"
                                    class="form-control"
                                    placeholder=""
                                    ng-model="shipmentItem.DeliverTo"
                                    ng-disabled="true">
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Consignee Contact No</label>
                        <div class="col-md-8">
                            <input id="consigneecontactno"
                                   type="text"
                                   class="form-control"
                                   placeholder=""
                                   ng-model="shipmentItem.DeliverToContactNo"
                                   ng-disabled="true">
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Consignee Address</label>
                        <div class="col-md-8">
                            <textarea rows="3" style="height:auto;"
                                      class="form-control"
                                      placeholder=""
                                      ng-model="shipmentItem.DeliveryAddress"
                                      ng-disabled="true"></textarea>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Cargo Description</label>
                        <div class="col-md-8">
                            <textarea rows="3" style="height:auto;"
                                      class="form-control"
                                      placeholder=""
                                      ng-model="shipmentItem.Description"
                                      ng-disabled="true"></textarea>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Quantity</label>
                        <div class="col-md-4">
                            <input id="quantity"
                                   type="text"
                                   class="form-control text-right"
                                   ng-model="shipmentItem.Quantity"
                                   ng-disabled="true">
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Total CBM</label>
                        <div class="col-md-4">
                            <input id="cbm"
                                   type="text"
                                   class="form-control text-right"
                                   ng-model="shipmentItem.TotalCBM"
                                   ng-disabled="true">
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Delivery Date</label>
                        <div class="col-md-4">
                            <div class='input-group date'>
                                <input type='text'
                                       id="deliveryDate"
                                       class="form-control deliverydate"
                                       ng-model="shipmentItem.DeliveryDate"
                                       ng-disabled="viewOnly" />
                                <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                    <span class=" glyphicon glyphicon-remove-circle"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Delivery Time</label>
                        <div class="col-md-4">
                            <div class='input-group date'>
                                <input type='text'
                                       id="deliveryTime"
                                       class="form-control deliverytime"
                                       ng-model="shipmentItem.DeliveryTime"
                                       ng-disabled="viewOnly" />
                                <span class="input-group-addon" title="Close" style="padding:2px 0 2px 10px;">
                                    <span class=" glyphicon glyphicon-remove-circle"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label class="col-md-3 control-label small">Received By</label>
                        <div class="col-md-4">
                            <input type="text"
                                   id="receivedByName"
                                    class="form-control"
                                    ng-model="shipmentItem.ReceivedByName"
                                    ng-disabled="viewOnly">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
<!-- List -->
@section tab2Content{
    <div style="padding:0 10px">
        <div class="text-right toggle-hide" ng-click="hideShipmentToggle()" ng-show="shipmentToggle">
            <span class="fa fa-minus" title="Hide"></span>
        </div>
        <div id="shipmentToggle">
            <div id="shipmentFilterContainter" style="padding-left:10px;"></div>
        </div><br>
        <div id="shipmentContainer"></div>
    </div>
}
<!--End of List-->

@*Form Context-Menu*@
<div class="dropdown position-fixed" id="FormMenu">
    <ul class="dropdown-menu" role="menu">
        <li>
            <a class="pointer small" role="menuitem" tabindex="0" ng-click="shipmentOtheractions('Find')">Find</a>
        </li>
        <li>
            <a style="{{shipmentItem.Id != null && actionMode == 'Edit' ? '' : 'color:#B8B8B8'}}" class="pointer small" role="menuitem" tabindex="2" ng-click="shipmentOtheractions(shipmentItem.Id != null && shipmentSubmitDefinition.Type == 'Edit' ? 'PostEditAction' : '')">Edit</a>
        </li>
    </ul>
</div>